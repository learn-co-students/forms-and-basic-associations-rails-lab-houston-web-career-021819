<h1>Create a Song</h1>

<%= form_for(@song) do |f| %>
  <%= f.label :Title %>
  <%= f.text_field :title %>
  <br />  

  <%= f.label :Artist %>
  <%= f.text_field :artist_name %>
  <br />  
 
 <%= f.label :Genre %>
<%= f.collection_select :genre_id, Genre.all, :id, :name %> <!-- when using select to set belongs_to association, we must grab the foreign key id -->
  <br /> 

<%= f.label :Note %>
  <input type = "text" id = "song_notes_1" name = "song[note_contents][]">
  <input type = "text" id = "song_notes_2" name = "song[note_contents][]">
  <br />  

  <%= f.submit %>
<% end %>


