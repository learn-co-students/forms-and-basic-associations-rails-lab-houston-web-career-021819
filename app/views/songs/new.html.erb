<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br>
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
  <br>
  <%= f.text_field :genre_id, list: "genre_name" %>
  <br>
  <datalist id="genre_name">
    <% @genres.each do |genre| %>
      <option value="<%= genre.name %>">
    <% end %>
  </datalist>
  <br>
  <% x = 1 %>
  <% 2.times do %>
  <input name="notes[]" id=song_notes_<%= x %>>
  <% x += 1 %>
  <% end %>

  <%= f.submit %>
<% end %>
