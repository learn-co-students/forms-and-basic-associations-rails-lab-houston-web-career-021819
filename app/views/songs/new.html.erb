<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
<br>
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
<br>
  <%= f.label :genre_name %>
  <%= f.text_field :genre_id, list: "genre_choices_autocomplete" %>
  <datalist id="genre_choices_autocomplete">
    <% @genres.each do |genre| %>
      <option value="<%= genre.id %>"><%= genre.name %></option>
    <% end %>
  </datalist>
<br>
            <!--Create a new Item of our Model-->
            <div>
                <label>Notes 1</label>
                <input type="text" name="song[note_contents][]" id="song_notes_1" />
            </div>
            <div>
                <label>Notes 2</label>
                <input type="text" name="song[note_contents][]" id="song_notes_2" />
            </div>

<br>

<br>


<br>


  <br>

  <%= f.submit %>
<% end %>


